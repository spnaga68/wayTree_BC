# ============================================
# WAYTREE BACKEND CONFIGURATION
# ============================================
# Copy this file to .env and update the values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# API & FRONTEND URLS (CHANGE FOR DEPLOYMENT)
# ============================================
# Local Development
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# Production Example (Update these when deploying):
# API_BASE_URL=https://api.waytree.com
# FRONTEND_URL=https://app.waytree.com

# Admin Panel URL
ADMIN_PANEL_URL=http://localhost:5000

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:8080,http://localhost:3000,http://localhost:5000

# Production Example:
# CORS_ORIGIN=https://app.waytree.com,https://admin.waytree.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/waytree?retryWrites=true&w=majority
DB_NAME=waytree

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRE=30d

# ============================================
# OTP CONFIGURATION
# ============================================
OTP_EXPIRY_MINUTES=10
OTP_CODE_LENGTH=6

# ============================================
# EMAIL CONFIGURATION (Gmail)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=WayTree
SMTP_FROM_EMAIL=noreply@waytree.com

# ============================================
# AI CONFIGURATION
# ============================================
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=50mb

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# DEBUGGING
# ============================================
DEBUG_MODE=true
LOG_LEVEL=debug

# ============================================
# DEPLOYMENT CHECKLIST
# ============================================
# Before deploying to production:
# 
# 1. Change NODE_ENV to 'production'
# 2. Update API_BASE_URL to your production API domain
# 3. Update FRONTEND_URL to your app domain
# 4. Update CORS_ORIGIN with production domains
# 5. Change JWT_SECRET to a strong random string
# 6. Change REFRESH_TOKEN_SECRET to a strong random string
# 7. Update MONGODB_URI to production database
# 8. Configure email settings (SMTP)
# 9. Add your GEMINI_API_KEY
# 10. Set DEBUG_MODE to false
# 
# Security Tips:
# - Never commit .env file to version control
# - Use environment variables in production
# - Rotate secrets regularly
# - Use strong, unique secrets for JWT
# ============================================
