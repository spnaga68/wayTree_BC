{
  "info": {
    "name": "Connection API",
    "description": "API collection for Network Code connections",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Connect to Network Code",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"codeId\": \"TSN2024\",\n  \"message\": \"Hi, I'd like to join your tech startup network. I'm a founder working on AI solutions.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/connections/connect",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "connect"]
        },
        "description": "Connect to a network code by providing codeId and optional message"
      },
      "response": []
    },
    {
      "name": "Get My Connections - All",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/my-connections",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "my-connections"]
        },
        "description": "Get all connections (both sent and received)"
      },
      "response": []
    },
    {
      "name": "Get My Connections - Sent Only",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/my-connections?type=sent",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "my-connections"],
          "query": [
            {
              "key": "type",
              "value": "sent"
            }
          ]
        },
        "description": "Get connections that I initiated"
      },
      "response": []
    },
    {
      "name": "Get My Connections - Received Only",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/my-connections?type=received",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "my-connections"],
          "query": [
            {
              "key": "type",
              "value": "received"
            }
          ]
        },
        "description": "Get connection requests that I received"
      },
      "response": []
    },
    {
      "name": "Get My Connections - Pending Only",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/my-connections?status=pending",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "my-connections"],
          "query": [
            {
              "key": "status",
              "value": "pending"
            }
          ]
        },
        "description": "Get only pending connections"
      },
      "response": []
    },
    {
      "name": "Accept Connection Request",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"accepted\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/connections/{{connectionId}}/status",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "{{connectionId}}", "status"]
        },
        "description": "Accept a connection request (only network code owner can do this)"
      },
      "response": []
    },
    {
      "name": "Reject Connection Request",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"rejected\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/connections/{{connectionId}}/status",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "{{connectionId}}", "status"]
        },
        "description": "Reject a connection request (only network code owner can do this)"
      },
      "response": []
    },
    {
      "name": "Get Network Code Connections",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/network-code/TSN2024",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "network-code", "TSN2024"]
        },
        "description": "Get all connections for a specific network code (owner only)"
      },
      "response": []
    },
    {
      "name": "Get Network Code Connections - Accepted Only",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/network-code/TSN2024?status=accepted",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "network-code", "TSN2024"],
          "query": [
            {
              "key": "status",
              "value": "accepted"
            }
          ]
        },
        "description": "Get only accepted connections for a network code"
      },
      "response": []
    },
    {
      "name": "Delete Connection",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/{{connectionId}}",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "{{connectionId}}"]
        },
        "description": "Delete a connection (either party can delete)"
      },
      "response": []
    },
    {
      "name": "Get Network Code Members (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/network-code/TSN2024/members",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "network-code", "TSN2024", "members"]
        },
        "description": "Get all accepted members of a network code (public endpoint - no auth required)"
      },
      "response": []
    },
    {
      "name": "Get Network Code Statistics (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/connections/network-code/TSN2024/stats",
          "host": ["{{baseUrl}}"],
          "path": ["connections", "network-code", "TSN2024", "stats"]
        },
        "description": "Get connection statistics for a network code (public endpoint - no auth required)"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://cpt4x27j-3000.inc1.devtunnels.ms",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your-jwt-token-here",
      "type": "string"
    },
    {
      "key": "connectionId",
      "value": "connection-id-here",
      "type": "string"
    }
  ]
}
