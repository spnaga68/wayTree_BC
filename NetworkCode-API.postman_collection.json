      "name": "Create Network Code",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Tech Startup Network\",\n  \"codeId\": \"TSN2024\",\n  \"description\": \"A network for tech startups and entrepreneurs\",\n  \"keywords\": [\"tech\", \"startup\", \"innovation\", \"entrepreneurship\"],\n  \"autoConnect\": false,\n  \"expirationTime\": \"2025-12-31T23:59:59.000Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/network-codes",
          "host": ["{{baseUrl}}"],
          "path": ["network-codes"]
        },
        "description": "Create a new network code with all details"
      },
      "response": []
    },
    {
